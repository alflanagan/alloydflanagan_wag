    "jsdoc": "^4.0.5",
    "mocha": "^11.7.4",
    "postcss": "^8.5.6",
    "postcss-styled-syntax": "^0.7.1",
    "prettier": "^3.6.2",
    "standard": "^17.1.2",
    "stylelint": "^16.25.0",
